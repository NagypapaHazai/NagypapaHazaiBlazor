@page "/register"
@using NagypapaHazaiBlazor.MODELS
@using System.ComponentModel.DataAnnotations
@inject NagypapaContext Db
@inject NavigationManager Nav

<h3>Regisztráció</h3>

<EditForm Model="_model"
          OnValidSubmit="HandleRegister"
          FormName="register-form">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="mb-3">
        <label>Felhasználónév</label>
        <InputText @bind-Value="_model.UserName" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Email</label>
        <InputText @bind-Value="_model.Email" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Jelszó</label>
        <InputText @bind-Value="_model.Password" type="password" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Regisztráció</button>
</EditForm>

@if (!string.IsNullOrEmpty(_message))
{
    <p style="color:green">@_message</p>
}

@code {
    private RegisterModel _model = new();
    private string _message = "";

    public class RegisterModel
    {
        [Required(ErrorMessage = "A felhasználónév megadása kötelező.")]
        public string UserName { get; set; } = "";

        [Required(ErrorMessage = "Az email megadása kötelező.")]
        [EmailAddress(ErrorMessage = "Érvénytelen email cím.")]
        public string Email { get; set; } = "";

        [Required(ErrorMessage = "A jelszó megadása kötelező.")]
        [MinLength(6, ErrorMessage = "A jelszónak legalább 6 karakter hosszúnak kell lennie.")]
        public string Password { get; set; } = "";
    }

    private async Task HandleRegister()
    {
        var user = new User
        {
            UserName = _model.UserName,
            Email = _model.Email,
            PasswordHash = _model.Password
        };

        Db.Users.Add(user);
        await Db.SaveChangesAsync();

        _message = "Sikeres regisztráció!";
        Nav.NavigateTo("/");
    }
}
