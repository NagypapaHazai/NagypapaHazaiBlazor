</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard">
                <span class="bi bi-house-door-fill" aria-hidden="true"></span> Dashboard
            </NavLink>
        </div>

    </nav>
</div>

@inject NagypapaHazaiBlazor.Services.AuthState Auth
@inject NavigationManager Nav

@if (Auth.IsLoggedIn)
{
    <span>@Auth.CurrentUser!.UserName</span>
    <button class="btn btn-link" @onclick="Logout">Kijelentkezés</button>
}
else
{
    <NavLink class="nav-link" href="/login">Bejelentkezés</NavLink>
    <NavLink class="nav-link" href="/register">Regisztráció</NavLink>
}

@code {
    private void Logout()
    {
        Auth.Logout();
        Nav.NavigateTo("/");
    }
}

